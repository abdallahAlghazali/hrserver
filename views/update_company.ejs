<%- include('include/_header') %> 


<main id="site-main">
    
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Companies</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Company</h2>
            <span class="text-light">Use the below form to update company information</span>
        </div>

        <br>
        <br>

        <!-- FORM >-->
        <form  method="POST" id="update_company">
            <div class="new_company">
                <div class="form-group">
                    <label for="name" class="text-light">Company Name</label>
                    <input type="hidden" name="id" value="<%= company._id %>">
                    <input type="text" name="name" value="<%= company.name %>" placeholder=" X Company">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Company Email</label>                   
                    <input type="text" name="email" value="<%= company.email %> " placeholder="info@companyX.com">
                </div>
                <div class="form-group">
                    <label for="Phone number" class="text-light">Phone number</label>                   
                    <input type="text" name="contact" value="<%= company.contact %> " placeholder= "+46 73 00 00 00">
                </div>                                                                   
                </div>
        
                <div class="form-group">
                    <label for="gender" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="status" value="Active" <%= company.status == 'Active'?'checked': '' %>>
                        <label for="radio-2" class="radio-label">Active</label>                        
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="status" value="Inactive" <%= company.status == 'Inactive'?'checked': '' %> >
                        <label for="radio-3" class="radio-label">Inactive</label>                        
                    </div>                                            
                </div>
        
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
          
        </form>
       
    </div>
</main>



<%- include('include/_footer') %> 